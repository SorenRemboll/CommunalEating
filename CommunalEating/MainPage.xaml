                        <TextBox VerticalAlignment="Top"
                                 HorizontalAlignment="Left"
                                 Grid.Column="0"
                                 Grid.Row="1"
                                 Margin="235,85,0,0"
                                 IsReadOnly="True"
                                 Background="LightGray" />
                        <TextBox VerticalAlignment="Top"
                                 HorizontalAlignment="Left"
                                 Grid.Column="0"
                                 Grid.Row="1"
                                 Margin="235,115,0,0"
                                 IsReadOnly="True"
                                 Background="LightGray" />
                        <TextBox VerticalAlignment="Top"
                                 HorizontalAlignment="Left"
