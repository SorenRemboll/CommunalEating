                                             Width="250" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,260,0,0"
                                             IsReadOnly="True"
                                             Background="LightGray"
                                             Width="250" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,320,0,0"
                                             IsReadOnly="True"
                                             Background="LightGray"
                                             Width="250" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,380,0,0"
                                             IsReadOnly="True"
                                             Background="LightGray"
                                             Width="250" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,440,0,0"
                                             IsReadOnly="True"
                                             Background="LightGray"
                                             Width="250" />

                                    <!--Pane 2-->

                                    <DatePicker Margin="15"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Center"
                                                Grid.Column="1" />

                                    <TextBlock Text="Overkok"
                                               FontSize="20"
                                               Margin="15,50,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               Grid.Column="1" />

                                    <TextBlock Text="Kok"
                                               FontSize="20"
                                               Margin="15,110,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               Grid.Column="1" />

                                    <TextBlock Text="Kok 2"
                                               FontSize="20"
                                               Margin="15,170,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               Grid.Column="1" />

                                    <TextBlock Text="Afryder"
                                               FontSize="20"
                                               Margin="15,230,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               Grid.Column="1" />

                                    <TextBlock Text="Afryder 2"
                                               FontSize="20"
                                               Margin="15,290,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               Grid.Column="1" />

                                    <TextBlock Text="Afryder 3"
                                               FontSize="20"
                                               Margin="15,350,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               Grid.Column="1" />

                                    <TextBlock Text="Torsdag Afryder"
                                               FontSize="20"
                                               Margin="15,410,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               Grid.Column="1" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,80,0,0"
                                             Width="250"
                                             Grid.Column="1" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,140,0,0"
                                             Width="250"
                                             Grid.Column="1" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,200,0,0"
                                             Width="250"
                                             Grid.Column="1" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,260,0,0"
                                             Width="250"
                                             Grid.Column="1" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,320,0,0"
                                             Width="250"
