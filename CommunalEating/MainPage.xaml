                                    <TextBlock Text="Torsdag Afryder"
                                               FontSize="20"
                                               Margin="15,410,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,80,0,0"
                                             IsReadOnly="True"
                                             Background="LightGray"
                                             Width="250" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,140,0,0"
                                             IsReadOnly="True"
                                             Background="LightGray"
                                             Width="250" />

                                    <TextBox VerticalAlignment="Top"
                                             HorizontalAlignment="Left"
                                             Margin="15,200,0,0"
                                             IsReadOnly="True"
